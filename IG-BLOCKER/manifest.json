{
    "manifest_version": 3,
    "name": "Instagram Blocker",
    "version": "1.0",
    "description": "Blocks Instagram and redirects to a custom page",
    "permissions": ["declarativeNetRequest"],
    "host_permissions": ["https://www.instagram.com/*"],
    "declarative_net_request": {
      "rule_resources": [
        {
          "id": "ruleset",
          "enabled": true,
          "path": "rules.json"
        }
      ]
    }
  }
  